CREATE DATABASE movietime;

USE movietime;

CREATE TABLE movies (
movie_id MEDIUMINT UNSIGNED NOT NULL AUTO_INCREMENT,
title NVARCHAR(30) NOT NULL,
genre NVARCHAR(10) NOT NULL,
year INT(4) NOT NULL,
director NVARCHAR(20) NOT NULL,
duration NVARCHAR(5) NOT NULL,
session NVARCHAR(5) NOT NULL,
photo IMAGE NOT NULL,
PRIMARY KEY (movie_id)
);

